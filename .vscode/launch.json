{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch Streamlit App",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/streamlit_app.py",
                "--server.enableCORS",
                "false",
                "--server.enableXsrfProtection",
                "false",
                "--server.address",
                "0.0.0.0",
                "--server.port",
                "8080",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}